<h1><%= @model.title %></h1>

<div class="description">
  <p>
    <%= @model.description %>
  </p>
</div>

<div class="rating">
  <%= @model.rating %> / 10
</div>

<div class="actions">
  <%= link_to "Edit this model", edit_model_path(@model) %>
  <%= link_to "Delete this model", model_path(@model), method: :delete, data: {confirm: "Are you sure you want to delete this model?"} %>
</div>
